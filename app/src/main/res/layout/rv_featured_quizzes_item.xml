<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.edu.lite.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.edu.lite.data.model.FeaturedQuizze" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFeatures"
        quizBackground="@{bean.userResponse.status}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/quests_first_bg"
        android:onClick="@{v->callback.onItemClick(v,bean,pos)}">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEarlyGrade"
            quizImageBg="@{bean.userResponse.status}"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/problom_solving_first_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader"
            style="@style/TextView.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:text="@{bean.name}"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivEarlyGrade"
            app:layout_constraintTop_toTopOf="@+id/ivEarlyGrade" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDesc"
            style="@style/TextView.regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{bean.description}"
            android:singleLine="false"
            app:setExpandableText="@{bean}"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_13sdp"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivEarlyGrade"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show More"
            android:visibility="gone"
            android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="?attr/startColor"
            android:layout_marginEnd="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDesc" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuestionCount"
            style="@style/TextView.regular"
            changeTextColor="@{bean.userResponse.status}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text='@{String.valueOf(bean.questions.size())+" Questions"}'
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@+id/ivEarlyGrade"
            app:layout_constraintTop_toBottomOf="@+id/tvShowMore" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            style="@style/TextView.regular"
            changeTextColor="@{bean.userResponse.status}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_14sdp"
            android:text='@{String.valueOf(bean.time)+" mins"}'
            android:textColor="?attr/startColor"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvQuestionCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvQuestionCount" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10 Questions"
            android:layout_marginEnd="@dimen/_13sdp"
            android:textColor="?attr/startColor"
            android:textSize="@dimen/_8ssp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivEarlyGrade"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>