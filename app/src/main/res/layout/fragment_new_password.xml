<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.edu.lite.ui.auth.AuthCommonVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.forgot.NewPasswordFragment">


        <include
            android:id="@+id/clHeader"
            layout="@layout/header_item_layout" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clHeader">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLogin"
                style="@style/TextView.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:gravity="center"
                android:onClick="@{v->vm.onClick(v)}"
                android:text="@string/create_new_password"
                android:textColor="?attr/startColor"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackButton"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/back_icon"
                app:layout_constraintBottom_toBottomOf="@+id/tvLogin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvLogin" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewPassword"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/et_bg"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="start"
                android:hint="@string/new_password"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="textPassword"
                android:nextFocusForward="@+id/etReNewPassword"
                android:imeOptions="actionNext"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingVertical="@dimen/_14sdp"
                android:paddingStart="@dimen/_38sdp"
                android:paddingEnd="@dimen/_42sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivBackButton" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNewPassword"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:src="@drawable/password"
                app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
                app:layout_constraintStart_toStartOf="@+id/etNewPassword"
                app:layout_constraintTop_toTopOf="@+id/etNewPassword" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHideNewPassword"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:src="@drawable/hide_password"
                app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
                app:layout_constraintEnd_toEndOf="@+id/etNewPassword"
                app:layout_constraintTop_toTopOf="@+id/etNewPassword" />




            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etReNewPassword"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/et_bg"
                android:gravity="start"
                android:hint="@string/re_enter_password"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="textPassword"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingVertical="@dimen/_14sdp"
                android:paddingStart="@dimen/_38sdp"
                android:imeOptions="actionDone"
                android:paddingEnd="@dimen/_42sdp"
                app:layout_constraintEnd_toEndOf="@+id/etNewPassword"
                app:layout_constraintStart_toStartOf="@+id/etNewPassword"
                app:layout_constraintTop_toBottomOf="@+id/etNewPassword" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReNewPassword"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:src="@drawable/password"
                app:layout_constraintBottom_toBottomOf="@+id/etReNewPassword"
                app:layout_constraintStart_toStartOf="@+id/etReNewPassword"
                app:layout_constraintTop_toTopOf="@+id/etReNewPassword" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHideRePassword"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/hide_password"
                android:onClick="@{v->vm.onClick(v)}"
                app:layout_constraintBottom_toBottomOf="@+id/etReNewPassword"
                app:layout_constraintEnd_toEndOf="@+id/etReNewPassword"
                app:layout_constraintTop_toTopOf="@+id/etReNewPassword"
                app:layout_constraintVertical_bias="0.538" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCreate"
                style="@style/TextView.semibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginTop="@dimen/_42sdp"
                android:background="@drawable/gradient_btn_bg"
                android:gravity="center"
                android:onClick="@{v->vm.onClick(v)}"
                android:textSize="@dimen/_14ssp"
                android:text="@string/create"
                app:layout_constraintTop_toBottomOf="@+id/etReNewPassword"
                app:layout_constraintEnd_toEndOf="@+id/etReNewPassword"
                app:layout_constraintStart_toStartOf="@+id/etReNewPassword"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>