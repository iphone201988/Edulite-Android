<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.edu.lite.ui.auth.AuthCommonVM" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-15dp"
            android:layout_marginHorizontal="-15dp"
            android:background="@drawable/splash_theme_1"
            setSplashBackground="@{true}"
            tools:context=".ui.auth.splash.SplashFragment">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStartLearning"
                style="@style/TextView.semibold"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:onClick="@{v->vm.onClick(v)}"
                android:textSize="@dimen/_14ssp"
                android:textColor="?attr/splashTextColor"
                android:text="Start Learning"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>